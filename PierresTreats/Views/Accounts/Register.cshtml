@{ Layout = "_Layout"; }

@using PierresTreats.ViewModels
@model RegisterViewModel

<h2>Register for an account</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
  <p>@Html.LabelFor(user => user.UserName)
  @Html.TextBoxFor(user => user.UserName)</p>
  
  <p>@Html.LabelFor(user => user.Email)
  @Html.TextBoxFor(user => user.Email)</p>

  <p>@Html.LabelFor(user => user.Password)
  @Html.TextBoxFor(user => user.Password)</p>

  <p>@Html.LabelFor(user => user.ConfirmPassword)
  @Html.TextBoxFor(user => user.ConfirmPassword)</p>

  <p><input type="submit" value="Register" /></p>
}